#!/usr/bin/env python3
from reportlab.lib.pagesizes import letter
from reportlab.lib.styles import getSampleStyleSheet, ParagraphStyle
from reportlab.lib.units import inch
from reportlab.lib.colors import HexColor
from reportlab.platypus import SimpleDocTemplate, Paragraph, Spacer, Table, TableStyle, PageBreak
from reportlab.lib import colors
from reportlab.lib.enums import TA_JUSTIFY

doc = SimpleDocTemplate(
    "/mnt/user-data/outputs/Plataforma_Educativa_Requerimientos.pdf",
    pagesize=letter,
    rightMargin=0.7*inch, leftMargin=0.7*inch,
    topMargin=0.7*inch, bottomMargin=0.7*inch
)

styles = getSampleStyleSheet()
styles.add(ParagraphStyle(name='MainTitle', parent=styles['Title'], fontSize=22, spaceAfter=20, textColor=HexColor('#1a365d')))
styles.add(ParagraphStyle(name='Sec', parent=styles['Heading1'], fontSize=16, spaceBefore=20, spaceAfter=12, textColor=HexColor('#2c5282')))
styles.add(ParagraphStyle(name='Sub', parent=styles['Heading2'], fontSize=13, spaceBefore=12, spaceAfter=8, textColor=HexColor('#2d3748')))
styles.add(ParagraphStyle(name='SubSub', parent=styles['Heading3'], fontSize=11, spaceBefore=8, spaceAfter=6, textColor=HexColor('#4a5568')))
styles.add(ParagraphStyle(name='Bd', parent=styles['Normal'], fontSize=10, spaceAfter=6, alignment=TA_JUSTIFY, leading=14))
styles.add(ParagraphStyle(name='Blt', parent=styles['Normal'], fontSize=10, leftIndent=15, spaceAfter=3, leading=13))
styles.add(ParagraphStyle(name='Cd', parent=styles['Normal'], fontSize=8, fontName='Courier', leftIndent=10, spaceAfter=8))

story = []

def add_section(title):
    story.append(Paragraph(title, styles['Sec']))

def add_sub(title):
    story.append(Paragraph(title, styles['Sub']))

def add_subsub(title):
    story.append(Paragraph(title, styles['SubSub']))

def add_text(text):
    story.append(Paragraph(text, styles['Bd']))

def add_bullet(text):
    story.append(Paragraph(f"โข {text}", styles['Blt']))

def add_code(text):
    story.append(Paragraph(text.replace('\n', '<br/>').replace('  ', '&nbsp;&nbsp;'), styles['Cd']))

def add_table(data, widths):
    t = Table(data, colWidths=widths)
    t.setStyle(TableStyle([
        ('BACKGROUND', (0, 0), (-1, 0), HexColor('#2c5282')),
        ('TEXTCOLOR', (0, 0), (-1, 0), colors.white),
        ('FONTNAME', (0, 0), (-1, 0), 'Helvetica-Bold'),
        ('FONTSIZE', (0, 0), (-1, -1), 8),
        ('GRID', (0, 0), (-1, -1), 0.5, HexColor('#e2e8f0')),
        ('TOPPADDING', (0, 0), (-1, -1), 5),
        ('BOTTOMPADDING', (0, 0), (-1, -1), 5),
        ('ALIGN', (0, 0), (-1, -1), 'LEFT'),
        ('ROWBACKGROUNDS', (0, 1), (-1, -1), [HexColor('#ffffff'), HexColor('#f7fafc')])
    ]))
    story.append(t)
    story.append(Spacer(1, 10))

# ========== PORTADA ==========
story.append(Spacer(1, 1.5*inch))
story.append(Paragraph("DOCUMENTO DE REQUERIMIENTOS", styles['MainTitle']))
story.append(Paragraph("PLATAFORMA EDUCATIVA LMS", styles['MainTitle']))
story.append(Spacer(1, 0.3*inch))
story.append(Paragraph("Sistema de Gestiรณn de Aprendizaje - Tipo Moodle", styles['Sub']))
story.append(Paragraph("Stack: React + TypeScript", styles['Sub']))
story.append(Spacer(1, 0.5*inch))
add_text("Versiรณn: 1.0 | Enero 2026 | Optimizado para procesamiento por LLM")
story.append(PageBreak())

